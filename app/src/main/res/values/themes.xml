<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FarmasiDinkesMinahasa" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue_500_light</item>
        <item name="colorPrimaryVariant">@color/blue_700_light</item>
        <item name="colorAccent">@color/accent_light</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="Theme.FarmasiDinkesMinahasa" parent="Base.Theme.FarmasiDinkesMinahasa" />

    <style name="ShapeAppearance.TopLeftRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.ButtonRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="TopLeftRoundedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TopLeftRounded</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ButtonRoundedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ButtonRounded</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>